<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Pseudo PWM</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-primary" onclick="get_wt_pseudo_pwm();">Generate Wavetable</button>
    </div>
    </div>
</div>

<div class="d-flex justify-content-between row">
    
    <div class="col-lg-6">
        <h6 class="text-left mb-2">Base Frequency</h6>
        <div class="dropdown w-100">
            <button id="basefreq-button" class="btn btn-sm btn-primary dropdown-toggle w-100" type="button" id="baseFreqDropdownButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            63 Hz
            </button>
            <div class="dropdown-menu" aria-labelledby="baseFreqDropdown">
            <a class="dropdown-item" onclick="set_hz(63);">63 Hz</a>
            <a class="dropdown-item" onclick="set_hz(126);">126 Hz</a>
            <a class="dropdown-item" onclick="set_hz(252);">252 Hz</a>
            <a class="dropdown-item" onclick="set_hz(504);">504 Hz</a>
            <a class="dropdown-item" onclick="set_hz(1008);">1008 Hz</a>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <h6 class="text-left mt-3 mb-1">Max Movement</h6>
        <input type="range" class="form-range" value="0.07" min="0.001" max="1.0" step="0.001" oninput="this.nextElementSibling.value = this.value">
        <output id="max-movement">0.07</output>
    </div>

</div>
